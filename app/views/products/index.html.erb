<div class="products-index"><br>
  <%= render 'genre', genres: @genres %>
    <div class="col-xs-9">
      <% if params[:genre_id].present? %>
        <h2><i class="fas fa-boxes"></i><%= @genre.name %></h2>
      <% elsif params[:tag_id].present? %>
        <h2><i class="fas fa-boxes"></i><%= @tag.tag_name %>一覧</h2>
      <% elsif params[:search]%>
        <h2><i class="fas fa-boxes"></i>検索結果：<%= @product %></h2>
      <% else %>
        <h2><i class="fas fa-boxes"></i>全商品</h2>
      <% end %>
      <h4>(全<%= @products_all.count %>件)</h4>
      <div class="product-contena">
        <% @products.each do |product| %>
          <div class="product-box">
            <%= link_to product_path(product) do %>
              <% product.product_images.first(1).each do |image| %>
                <%= attachment_image_tag image, :image, :fill, 280, 280, 'data-turbolinks': false, class: 'product-image' %>
              <% end %>
              <p class="product-name"><%= product.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class='paginate'><%= paginate @products %></div>
    </div>
  </div>
</div>