<div class="row">
  <h3 class="admin-title">商品詳細</h3><br>
</div>
<div class="row">
  <div class="col-xs-3">
    <% if @product.favorited_by?(current_user) %>
      <li>
        <%= link_to product_favorite_path(@product), method: :delete do %>
          <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
          <%= @product.favorites.count %> いいね
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to product_favorites_path(@product), method: :post do %>
          <i class="fa fa-heart" aria-hidden="true"></i>
          <%= @product.favorites.count %> いいね
        <% end %>
      </li>
    <% end %>
    <% if @product.product_images.present? %>
      <% @product.product_images.each do |image| %>
        <%= attachment_image_tag image, :image, :fill, 200, 200 %>
      <% end %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: '200x200' %>
    <% end %>
  </div>
  <div class="col-xs-6">
	<table class="table">
		<tr>
			<th class="col-xs-4">商品名</th>
			<td><%= @product.name %></td>
		</tr>
		<tr>
			<th>商品説明</th>
			<td><%= @product.introduction %></td>
		</tr>
		<tr>
			<th>ジャンル</th>
			<td><%= @product.genre.name %></td>
		</tr>
		<tr>
	      <th>販売ステータス</th>
		  <td><%= @product.status  %></td>
		</tr>
		<tr>
	      <th>販売ステータス</th>
		  <td><%= @product.is_active ? "取引終了" : "販売中"  %></td>
		</tr>
	</table>
	<%= link_to "編集する", edit_product_path(@product), class: "btn btn-primary", :style=>"float:right;"%>
	<div class="comment-list bt style-2" id="comments">
      <div class="float-wrapper">
        <h2 class="comment-count"><%= @product.comments.count %>件コメント</h2>
      </div>
      <ol>
        <% @product.comments.each do |comment| %>
          <li class="comment">
            <div class="comment-body bb">
              <div class="comment-avatar">
                <div class="avatar">
                  <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                </div>
              </div>
              <div class="comment-text">
                <div class="comment-author clearfix">
                  <a href="#" class="link-author"><%= comment.user.name %></a>
                  <span class="comment-meta">
                    <span class="comment-date"><%= @product.created_at.strftime('%Y/%m/%d') %></span>
                   </span>
                </div>
                <div class="comment-entry"><%= comment.comment %></div>
                  <% if comment.user == current_user %>
                    <div>
                      <%= link_to "削除", product_comment_path(comment.product, comment), method: :delete, class: "btn btn-danger pull-right" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ol>
    </div>
    <hr>
    <div class="section-title-wrapper style-1 v1 mt-30" id="divAddComment">
      <h3 class="section-title left">
        <span>コメント</span>
      </h3>
    </div>
    <%= form_for [@product, @comment] do |f| %>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
        </div>
      </div>
      <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
    <% end %>
  </div>
  <% unless @product.user_id == current_user.id %>
    <% if @isRoom == true %>
      <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @product.user_id %>
        <% end %>
        <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
      <% end %>
    <% end %>
  <% end %>
</div>
