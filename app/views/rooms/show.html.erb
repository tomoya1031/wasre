<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <% if m.user == current_user %>
          <div class="mychat-box">
            <div class="arrow_mybox">
              <strong><%= m.message %></strong>
            </div>
            <div class="chat-face">
              <%= attachment_image_tag m.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
              <div>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="youchat-box">
            <div class="chat-face">
              <%= attachment_image_tag m.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
              <div>
                <%= m.user.name%>
              </div>
              <div>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
              </div>
            </div>
            <div class="arrow_youbox">
              <strong><%= m.message %></strong>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-control" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿", class: "btn btn-success" %>
    <% end %>
  </div>
</div>