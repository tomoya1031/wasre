<div class="mypage-product">
  <h3>投稿商品一覧</h3>
  <% if products.count == 0 %>
    <h4>　投稿された商品はありません<h4>
  <% else %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th class="mypage-product-title">商品名</th>
          <th class="mypage-product-title">販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% products.each do |product| %>
          <tr>
  	        <td>
  	          <%= link_to product_path(product) do %>
  		        <% product.product_images.first(1).each do |image| %>
  		          <%= attachment_image_tag image, :image, class:"img-square", fallback: "no_image.png", size:"200x160" , 'data-turbolinks': false %>
  		        <% end %>
  	          <% end %>
  	        </td>
  	        <td><%= link_to product.name, product_path(product), 'data-turbolinks': false %></td>
  	        <td><%= product.is_active ? "取引終了" : "販売中"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class='paginate'><%= paginate products %></div>
  <% end %>
</div>