<div class="row">
 <div class="col-xs-1">
 </div>
 <div class="col-xs-7">

<br>
<h3><i class="fas fa-user"></i>マイページ</h3><br>

<div>
	<span class="mypage-span">登録情報</span>
	<%= link_to edit_user_path do %>
		<button class="btn btn-primary">編集する</button>
	<% end %>
	<%= link_to edit_user_registration_path do %>
		<button class="btn btn-primary">パスワードを変更する</button>
	<% end %>
</div><br>

<table class="table table-striped">
	<tr>
		<th>氏名</th>
		<td>
			<span><%= @user.name %></span>
		</td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td>
			<span><%= @user.post_code %></span>
		</td>
	</tr>
	<tr>
		<th>住所</th>
		<td>
			<span><%= @user.prefecture_name %></span>
            <span><%= @user.address_city %></span>
            <span><%= @user.address_street %></span>
		</td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td>
			<span><%= @user.phone_number %></span>
		</td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td>
			<span><%= @user.email %></span>
		</td>
	</tr>
</table>

 </div>
</div>