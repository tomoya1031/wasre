<% if flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
<div class="row">
  <div class="col-lg-2"></div>
    <div class="col-lg-8 col-xs-12">
	  <% if @user == current_user%>
		<div>
	      <h1><i class="fas fa-user"></i> マイページ</h1>
		  <% if unchecked_notifications.any? %>
            <i class="fa fa-circle" style="color: gold;"></i>
          <% end %>
          <li>
            <%= link_to "NOTICE", notifications_path, class: "btn-default" %>
          </li>
        </div>
        <br>
	  <% else %>
		<h3><i class="fas fa-user"></i> プロフィール</h3>
		<br>
	  <% end %>
	  <div class="mypage">

		<%= render 'myprofile', user: @user %>

		<% if @user == current_user%>
	      <%= link_to "取　引　履　歴", orders_path, class: "btn btn-info btn-lg btn-block" %>
		<% end %>

		<%= render 'myproduct', products: @products %>

	  </div>
	</div>
  </div>
</div>