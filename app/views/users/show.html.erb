<div class="row">
 <div class="col-xs-1">
 </div>
 <div class="col-xs-7">

<br>
<h3><i class="fas fa-user"></i>マイページ</h3><br>

<div>
	<span class="mypage-span">登録情報</span>
	<%= link_to edit_user_path do %>
		<button class="btn btn-primary">編集する</button>
	<% end %>
	<%= link_to edit_user_registration_path do %>
		<button class="btn btn-primary">パスワードを変更する</button>
	<% end %>
</div><br>

<table class="table table-striped">
	<tr>
		<th>氏名</th>
		<td>
			<span><%= @user.name %></span>
		</td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td>
			<span><%= @user.post_code %></span>
		</td>
	</tr>
	<tr>
		<th>住所</th>
		<td>
			<span><%= @user.prefecture_name %></span>
            <span><%= @user.address_city %></span>
            <span><%= @user.address_street %></span>
		</td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td>
			<span><%= @user.phone_number %></span>
		</td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td>
			<span><%= @user.email %></span>
		</td>
	</tr>
</table>
<h2>商品</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td>
						<%= link_to product_path(product) do %>
						  <% product.product_images.first(1).each do |image| %>
						    <%= attachment_image_tag image, :image, :fill, 280, 280, 'data-turbolinks': false, fallback: "no_image.jpg", size:"200x160", class: 'product-image'%>
						  <% end %>
						  <p><%= product.name %></p><br>
						<% end %>
					</td>
					<td><%= link_to product.introduction, product_path(product), class: "product_#{product.id}" %></td>
					<td><%= product. introduction %></td>
				</tr>
				<% end %>
			</tbody>
			
		</table>
		<div><%= paginate @products %></div>

 </div>
</div>