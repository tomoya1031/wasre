<%= form_with model: @inquiry, url: inquiry_confirm_path, local: true do |f| %>
  <h1><i class="fas fa-envelope"></i>お問い合わせ</h1><br>
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li class="error-message"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email, class: "form-control" %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容<span class="text-danger">（必須）</span></th>
      <td><%= f.text_area :message, class: "form-control", size: "50x10" %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>