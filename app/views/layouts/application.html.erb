<!DOCTYPE html>
<html>
  <head>
    <title>WASRe:</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>

  <body>
    <header>
      <div class="container">
        <div class='row'>
          <% if user_signed_in? %>
            <div class="col-lg-4 col-xs-4 top-user">
              <span>
                <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.png", class:"top-profile" %>
                <%= current_user.name %>さん
              </span>
            </div>
          <% else %>
            <div class="col-lg-4 col-xs-4">
            </div>
          <% end %>
          <div class="col-lg-4 col-xs-4 title">
            <%= link_to "WASRe:", root_path, class: "title-name" %>            
          </div>
          <div class="col-lg-4  col-xs-4 top-search">
            <%= form_with(url: products_path, method: :get, local: true) do %>  
              <p>
                <%= text_field_tag :search, params[:search] %>  
                <%= submit_tag "商品検索", :name => nil %>  
              </p>
            <% end %>
          </div>
          <div class="col-lg-12 col-xs-12">
            <nav>
              <% if user_signed_in? %>
                <li><%= link_to "マイページ", user_path(current_user.id), class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "商品一覧", products_path, class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "新規投稿", new_product_path, class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "Editlink" %></li>
              <% else %>
                <li><%= link_to "Home", root_path, class: "Editlink" %></li>
                <li><%= link_to "About", about_path, class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "商品一覧", products_path, class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "新規登録", new_user_registration_path, 'data-turbolinks': false, class: "Editlink", 'data-turbolinks': false %></li>
                <li><%= link_to "ログイン", new_user_session_path, class: "Editlink", 'data-turbolinks': false %></li>
              <% end %>
            </nav>
          </div>
      </div>
    </div>
  </header>

  <div class= "container top-hi">
    <%= yield %>
  </div>
  
  <footer>
    <div class= "container">
      <%= link_to inquiry_path do %> 
      <div class="footer-i">    
        <i class="far fa-question-circle"></i>お問い合わせ
      </div>
      <% end %>
    </div>
  </footer>
  </body>
</html>
