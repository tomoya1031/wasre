<h3><i class="far fa-copy"></i></i>注文履歴一覧</h3><br>
<table class="table table-striped ">
	<thead>
		<tr class="warning">
			<th class="col-xs-2">注文日</th>
			<th class="col-xs-4">商品名</th>
			<th class="col-xs-3"></th>
			<th class="col-xs-1">注文詳細</th>
		</tr>
	</thead>
	<tbody>
	  <% @orders.each do |order| %>
		<tr>
			<td class="col-xs-2"><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td class="col-xs-4">
              <% order.product.product_images.first(1).each do |image| %>
                <%= attachment_image_tag image, :image, :fill, 80, 80, 'data-turbolinks': false, fallback: "no_image.jpg", size:"200x160", class: 'product-image'%>
              <% end %>
            </td>
			<td class="col-xs-1"><%= order.product.name %></td>
			<td class="col-xs-1"><%= link_to "詳細", product_path(order.product.id), class: "btn btn-primary" %></td>
		</tr>
	  <% end %>
	</tbody>
</table>